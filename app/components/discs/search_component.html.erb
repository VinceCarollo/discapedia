<div class="relative" data-controller="reveal disc-search">
  <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
    <svg class="w-4 h-4 text-columbia-blue" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
    </svg>
  </div>
  <%= form_with url: search_path, method: :get, data: { controller: 'auto-submit',
                                                        turbo_frame: :dropdown_results } do |f| %>
    <%= f.search_field :q,
                       placeholder: 'Search for any Disc or Manufacturer...',
                       required: true,
                       data: { action: 'input->reveal#show input->auto-submit#submit input->disc-search#hideResultsOnClear focus->reveal#show', disc_search_target: 'input' },
                       class: 'block w-full p-4 ps-10 text-columbia-blue border border-gray-600 rounded-lg bg-gray-700 border-gray-600 placeholder-columbia-blue focus:border-columbia-blue focus:ring-columbia-blue' %>
  <% end %>
  <ul data-reveal-target="item"
      data-disc-search-target="results"
      id="disc-select"
      class="hidden absolute w-full bg-gray-700 text-columbia-blue px-3 py-2 border-l border-r border-gray-600 rounded">
    <turbo-frame id='dropdown_results'></turbo-frame>
  </ul>
</div>
