<div class="w-100 text-2xl font-semibold bg-air-force-blue my-2 p-2 rounded"><%= @manufacturer.name %></div>
<% @discs.each do |disc| %>
  <%= link_to disc_url(disc),
              data: { action: 'click->hide#hideContent', turbo: true, turbo_frame: :search_results } do %>
    <div class="flex justify-between border-b border-t border-gray-600 p-1 hover:bg-gray-600">
      <div class="pl-3">
        <h3><%= disc.name %></h3>
      </div>
      <div class="flex justify-between w-3/12 px-2 hidden md:flex">
        <div><%= number_to_human(disc.speed) %></div>
        <span class="text-air-force-blue">|</span>
        <div><%=  number_to_human(disc.glide) %></div>
        <span class="text-air-force-blue">|</span>
        <div><%=  number_to_human(disc.turn) %></div>
        <span class="text-air-force-blue">|</span>
        <div><%=  number_to_human(disc.fade) %></div>
      </div>
    </div>
  <% end %>
<% end %>